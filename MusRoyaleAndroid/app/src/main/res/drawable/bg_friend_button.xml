<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/friends_button_pressed" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/friends_button_bg" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/friends_item_border" />
        </shape>
    </item>
</selector>

