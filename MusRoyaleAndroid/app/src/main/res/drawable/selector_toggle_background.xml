<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="@color/toggle_bg_selected" />
            <stroke android:width="1dp" android:color="@color/toggle_stroke_selected" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="@color/toggle_bg_unselected" />
            <stroke android:width="1dp" android:color="@color/toggle_stroke_unselected" />
        </shape>
    </item>
</selector>

