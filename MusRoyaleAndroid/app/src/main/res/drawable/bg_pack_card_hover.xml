<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF"> <item android:id="@android:id/mask">
    <shape>
        <solid android:color="@android:color/white" />
        <corners android:radius="20dp" />
    </shape>
</item>

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <gradient
                        android:startColor="#2D3A4F"
                        android:endColor="#1A2436"
                        android:angle="135"/>
                    <corners android:radius="20dp" />
                    <stroke android:width="2dp" android:color="#FFD700" /> </shape>
            </item>

            <item>
                <shape>
                    <gradient
                        android:startColor="#1E293B"
                        android:endColor="#0F172A"
                        android:angle="135"/>
                    <corners android:radius="20dp" />
                    <stroke android:width="1dp" android:color="#334155" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>