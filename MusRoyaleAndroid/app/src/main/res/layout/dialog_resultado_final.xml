<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="24dp"
    app:cardElevation="20dp"
    app:strokeWidth="2dp"
    app:strokeColor="#FFD700">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_gradient"
    android:padding="32dp"
    android:gravity="center">

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#15FFFFFF"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/imgCopa"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/copa"
            app:tint="#FFD700" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtTituloFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZORIONAK!"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:gravity="center" />

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="#FFD700"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/txtCuerpoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARTIDA IRABAZI DUZUE!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/txtMensajeFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zuek zarete nagusi tapetean.\nBenetako txapeldunak!"
        android:textColor="#B3FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIrtenFinal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="MENURA ITZULI"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1B3F35"
        app:backgroundTint="#FFD700"
        app:cornerRadius="12dp"
        app:elevation="4dp" />

</LinearLayout>
</com.google.android.material.card.MaterialCardView>