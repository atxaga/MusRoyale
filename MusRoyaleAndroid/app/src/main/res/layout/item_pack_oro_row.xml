<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootPack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:background="@drawable/bg_pack_card_hover"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="6dp">

    <ImageView
        android:id="@+id/imgPack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/oro"
        android:elevation="2dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCantidadOro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000 ORO"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URREA LORTU"
            android:textColor="#FFD700"
            android:letterSpacing="0.1"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtPrecioBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_precio"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="1.99â‚¬"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="17sp"
        android:elevation="4dp" />
</LinearLayout>