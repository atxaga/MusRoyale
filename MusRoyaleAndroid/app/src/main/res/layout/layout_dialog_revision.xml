<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivDialogIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_menu_recent_history"
        android:layout_marginBottom="16dp"
        android:contentDescription="Revision icon"
        android:tint="#FFD700" />

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eskaera Berrikusten"
        android:textColor="#FFD700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zure eskaera jaso dugu eta administratzaileak laster egiaztatuko du. Eskerrik asko zure pazientziagatik!"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnDialogOk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ONARTU"
        android:textColor="#000000"
        android:textStyle="bold"
        android:backgroundTint="#FFD700"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="12dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

</LinearLayout>