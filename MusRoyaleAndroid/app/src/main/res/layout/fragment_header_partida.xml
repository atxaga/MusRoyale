<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@android:color/transparent"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/leftScoreContainer"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_team_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/centerRoundContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"> <TextView
        android:id="@+id/leftTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etxekoak"
        android:textSize="14sp"
        android:textColor="#3E2723"
        android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/leftScoreBoxes"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/leftScoreBox1"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_score_box_1"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/leftScoreBox2"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_score_box_2"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centerRoundContainer"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_round_center"
        app:layout_constraintTop_toTopOf="@id/leftScoreContainer"
        app:layout_constraintBottom_toBottomOf="@id/leftScoreContainer"
        app:layout_constraintStart_toEndOf="@id/leftScoreContainer"
        app:layout_constraintEnd_toStartOf="@+id/rightScoreContainer">

        <TextView
            android:id="@+id/roundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RONDA"
            android:textSize="10sp"
            android:textColor="#3E2723"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightScoreContainer"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_team_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/centerRoundContainer"
        app:layout_constraintTop_toTopOf="@id/leftScoreContainer">

        <TextView
            android:id="@+id/rightTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kanpokoak"
            android:textSize="14sp"
            android:textColor="#3E2723"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/rightScoreBoxes"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/rightScoreBox1"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_score_box_1"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rightScoreBox2"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_score_box_2"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ajustes"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:padding="4dp"
        app:tint="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/rightScoreContainer"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>