<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTipoOperacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SARRERA"
                android:textSize="10sp"
                android:paddingHorizontal="6dp"
                android:background="#33FFFFFF"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtEstadoHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTipoOperacion"
                android:layout_marginTop="4dp"
                android:text="PENDIENTE"
                android:textColor="#FFD700"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMontoHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="0.00 USDT"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtIdHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 12345678"
            android:textColor="#888888"
            android:textSize="11sp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnEliminarHistorial"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="#444444"
            android:text="Ezabatu"
            android:textSize="10sp"
            android:textColor="#FF5252"
            app:cornerRadius="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>