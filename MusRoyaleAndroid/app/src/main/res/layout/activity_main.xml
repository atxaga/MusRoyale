<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        >
        <ProgressBar
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminateTint="#FFD700" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Datuak eskuratzen..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="30dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/containerHeaderAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgHeaderAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_avatar3"
                    app:strokeWidth="2dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom|end"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#FFD700" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/containerNamePremium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/containerHeaderAvatar"
                app:layout_constraintStart_toEndOf="@id/containerHeaderAvatar"
                app:layout_constraintEnd_toStartOf="@id/btnLogout">
                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jokalari_Maisua"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="serif" />

                <ImageView
                    android:id="@+id/imgPremiumBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/btn_star_big_on"
                    android:visibility="gone"
                    app:tint="#FFD700" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_lock_power_off"
                app:tint="#FF5252"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



            <ImageButton
                android:id="@+id/btnAdminPanel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_agenda"
                android:visibility="gone"
                app:tint="#FFD700"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnLogout" />

            <LinearLayout
                android:id="@+id/walletContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/containerHeaderAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/balanceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_balance_solid"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:id="@+id/txtBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50.00"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â‚¬"
                        android:textColor="#2ecc71"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnAddBalance"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="6dp"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="#2ecc71" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/oroContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_oro"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/oro"/>

                    <TextView
                        android:id="@+id/txtOro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.250"
                        android:textColor="#FFD700"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnAddOro"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="6dp"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="#FFD700" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footerWrapper" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerWrapper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clipChildren="false"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:translationZ="1dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="32dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/footermadera"
                android:backgroundTintMode="src_over" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selectionIndicator"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:translationZ="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/footermadera"
            app:shapeAppearanceOverlay="@style/CircleAppearance"
            app:strokeColor="#000000"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toTopOf="@+id/footer"
            app:layout_constraintBottom_toBottomOf="@+id/footer"
            app:layout_constraintStart_toStartOf="@+id/footer" />

        <LinearLayout
            android:id="@+id/footerIcons"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:translationZ="10dp"
            android:outlineProvider="none"
            app:layout_constraintStart_toStartOf="@+id/footer"
            app:layout_constraintEnd_toEndOf="@+id/footer"
            app:layout_constraintBottom_toBottomOf="@+id/footer">
            <FrameLayout android:id="@+id/tabAvatar" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:id="@+id/imgAvatar" android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/ic_avatar3" app:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tabChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgChat"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat2"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/badgeChat"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_circle_red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" /> </FrameLayout>

            <FrameLayout android:id="@+id/tabPlay" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:id="@+id/imgPlay" android:layout_width="28dp" android:layout_height="28dp" android:layout_gravity="center" android:src="@drawable/ic_home3" app:tint="#000000" />
            </FrameLayout>

            <FrameLayout android:id="@+id/tabFriends" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:id="@+id/imgFriends" android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/ic_friends3" app:tint="#FFFFFF" />
                <TextView
                    android:id="@+id/notiLaguna"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_circle_red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout android:id="@+id/tabStore" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:id="@+id/imgStore" android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/ic_shop3" app:tint="#FFFFFF" />
            </FrameLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>