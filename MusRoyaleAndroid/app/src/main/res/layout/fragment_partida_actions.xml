<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/actionsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRaise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mus"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/action_button_red"
            app:cornerRadius="8dp"
            app:iconGravity="textStart"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="6dp"
            android:icon="@drawable/ic_arrow_upward" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Envido"
            android:textAllCaps="false"
            android:textColor="@color/partida_text_primary"
            android:backgroundTint="@color/action_button_beige"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/partida_border"
            android:layout_marginEnd="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:icon="@drawable/ic_check"
            app:iconTint="@color/partida_border" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Envido ++"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/action_button_mocha"
            app:cornerRadius="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:icon="@drawable/ic_cancel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
