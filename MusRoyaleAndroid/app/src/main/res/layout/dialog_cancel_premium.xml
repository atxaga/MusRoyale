<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:tint="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="AGUR, LAGUNA..."
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Ziur zaude premium abantaila guztiak galdu nahi dituzula?"
            android:textColor="#BDBDBD"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:alpha="0.6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✘ Eskaintza bereziak amaituko dira"
                android:textColor="#FF5252"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="✘ Ez duzu urre gehiago jasoko"
                android:textColor="#FF5252"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="✘ Iragarkiak berriro agertuko dira"
                android:textColor="#FF5252"
                android:textSize="13sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStayPremium"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="EZ, PREMIUM IZATEN JARRAITU NAHI DUT"
            android:textColor="@android:color/white"
            app:backgroundTint="#3a7bd5"
            app:cornerRadius="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnConfirmCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bai, deuseztatu harpidetza"
            android:textColor="#757575"
            android:textSize="13sp"
            android:padding="8dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>