<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7CCC8"
    tools:context=".PrivateMatchSetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="start"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F5F5DC"
                    app:strokeColor="#C5A059"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/atras"
                            app:tint="#5D4037" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atzera"
                            android:textColor="#5D4037"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#E6D5B8"
                    app:strokeColor="#BCAAA4"
                    app:strokeWidth="1.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagunekin Jokatu"
                            android:textColor="#3E2723"
                            android:textSize="24sp"
                            android:fontFamily="serif"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="4dp"
                            android:background="#C5A059" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Jokalariak"
                            android:textColor="#5D4037"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnInviteFriend"
                                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:text="Laguna Gonbidatu"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                app:backgroundTint="#8D6E63"
                                app:cornerRadius="16dp"
                                app:icon="@android:drawable/ic_input_add"
                                app:iconTint="#FFFFFF"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/layoutGuestProfile"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:backgroundTint="#F5F5DC"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:visibility="gone">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/ivGuestAvatar"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/ic_avatar3"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                                    app:strokeColor="#C5A059"
                                    app:strokeWidth="2dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvGuestName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jokalaria..."
                                        android:textColor="#3E2723"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/itxaroten"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Onarpena Itxaroten..."
                                        android:textColor="#2ECC71"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/btnRemoveGuest"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@android:drawable/ic_delete"
                                    app:tint="#D32F2F" />
                            </LinearLayout>
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="24dp"
                            android:background="#BCAAA4" />

                        <TextView
                            android:id="@+id/erregekopuruaLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Errege Kopurua"
                            android:textColor="#5D4037"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/apostuaLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Apostua"
                            android:textColor="#5D4037"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/apostuLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMinus"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="âˆ’"
                                android:textSize="26sp"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="16dp"
                                app:backgroundTint="#8D6E63"
                                app:strokeWidth="0dp"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/apostuwhite"
                                android:layout_width="120dp"
                                android:layout_height="60dp"
                                android:layout_marginHorizontal="12dp"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="#FFFFFF"
                                app:cardElevation="4dp">

                                <EditText
                                    android:id="@+id/etApuestaValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text="5"
                                    android:textColor="#3E2723"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPlus"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="+"
                                android:textSize="26sp"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="16dp"
                                app:backgroundTint="#8D6E63"
                                app:strokeWidth="0dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlay"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="JOKATU"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#3E2723"
                    android:textColor="#E6D5B8"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconTint="#E6D5B8"
                    app:iconSize="28dp"
                    app:iconGravity="textStart"
                    app:elevation="12dp"/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>