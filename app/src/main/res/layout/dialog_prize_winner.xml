<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡ZORIONAK!"
            android:textColor="#FFD700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrizeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lortu duzun saria:"
            android:textColor="#BBBBBB"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">

            <View
                android:id="@+id/viewGlow"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_prize_glow" />

            <ImageView
                android:id="@+id/ivPrizeIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ava1" />
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCollect"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Jaso Saria"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#FFD700"
            app:cornerRadius="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>