<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zoneInfoContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <ScrollView
        android:id="@+id/sortuSartu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBar"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >


                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleSortuSartu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSortu"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Sortu"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:backgroundTint="#F5DEB3"
                        app:cornerRadius="18dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSartu"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sartu"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/toggle_bg_selected"
                        app:backgroundTint="#5B3A1C"
                        app:cornerRadius="18dp"
                        app:strokeColor="@color/toggle_stroke_selected"
                        app:strokeWidth="1dp" />

                </com.google.android.material.button.MaterialButtonToggleGroup>




            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_marginTop="80dp"
        android:id="@+id/setupScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="10dp"
                app:strokeColor="#8B4513"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="#F5DEB3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partidaren Kodea"
                        android:textColor="#5B3A1C"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Sartu nahi duzun partidaren kodea jarri."
                        android:textColor="#8B6F47"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="200sp"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:hint="AAAA11"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlay"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                android:text="Sortu"
                android:textAllCaps="false"
                android:textColor="#5B3A1C"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#F5DEB3"
                app:cornerRadius="28dp"
                app:elevation="8dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="#5B3A1C"
                app:rippleColor="#FFFFFF"
                app:strokeColor="#D2B48C"
                app:strokeWidth="3dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>