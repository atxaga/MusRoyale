<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    > <ImageButton
    android:id="@+id/btnBack"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Atzera"
    android:src="@drawable/ic_arrow_back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="#FFD700" />

    <TextView
        android:id="@+id/tvLootboxTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MISTERIO KUTXA"
        android:textColor="#FFD700"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/carouselCard"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvLootboxTitle">

        <FrameLayout
            android:id="@+id/lootboxCarouselContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.05"
                android:background="@android:drawable/dialog_holo_dark_frame" />

            <HorizontalScrollView
                android:id="@+id/lootboxScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/lootboxCarousel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false" />
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_lootbox_mask_premium"/>

            <View
                android:id="@+id/centerIndicator"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#FFD700" />

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_horizontal|top"
                android:background="#FFD700"
                android:rotation="45"
                android:translationY="-7dp"/>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPrizeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zure zortea probatzeko prest?"
        android:textColor="#AAAAAA"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/carouselCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenLootbox"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="IREKI KUTXA (1.00 â‚¬)"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#FFD700"
        app:cornerRadius="16dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>