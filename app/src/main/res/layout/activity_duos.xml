<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_setup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivateMatchSetupActivity">

    <RelativeLayout
        android:id="@+id/setupBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo1">

        <LinearLayout
            android:id="@+id/setupHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="30dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/header_username"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="30dp"
                android:text="@string/header_balance_placeholder"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/setupScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/setupHeaderBar"
            android:padding="16dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#8B4513"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#F5DEB3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zure lagunakin jokatu"
                            android:textColor="#5B3A1C"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Lagunak gonbidatu eta partida batera sartu."
                            android:textColor="#8B6F47"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnInviteFriend"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="16dp"
                            android:paddingVertical="12dp"
                            android:text="Laguna Gonbidatu"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#5B3A1C"
                            app:backgroundTint="#FFE082"
                            app:cornerRadius="18dp"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconGravity="start"
                            app:iconPadding="8dp"
                            app:iconTint="#5B3A1C"
                            app:strokeColor="#FFC107"
                            app:strokeWidth="2dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="#D2B48C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modalitatea aukeratu"
                            android:textColor="#5B3A1C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Partida mota aukeratu"
                            android:textColor="#8B6F47"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroupReyes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="20dp"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnFourKings"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="4 Errege"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textColor="@color/toggle_text_selector"
                                app:backgroundTint="#5B3A1C"
                                app:cornerRadius="18dp"
                                app:strokeColor="@color/toggle_stroke_selector"
                                app:strokeWidth="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnEightKings"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="8 Errege"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                app:backgroundTint="@color/toggle_bg_selector"
                                app:cornerRadius="18dp"
                                app:strokeColor="@color/black"
                                app:strokeWidth="1dp" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="#D2B48C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apostua ezarri"
                            android:textColor="#5B3A1C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Kantitatea aukeratu"
                            android:textColor="#8B6F47"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="200sp"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                       </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlay"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:text="Jokatu"
                    android:textAllCaps="false"
                    android:textColor="#5B3A1C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:backgroundTint="#F5DEB3"
                    app:cornerRadius="28dp"
                    app:elevation="8dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:iconTint="#5B3A1C"
                    app:rippleColor="#FFFFFF"
                    app:strokeColor="#D2B48C"
                    app:strokeWidth="3dp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

