<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_setup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchSetupActivity">

    <RelativeLayout
        android:id="@+id/setupBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo1">

        <LinearLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp"
            android:background="@drawable/header_background">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/header_username"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/balanceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/header_balance_placeholder"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <!-- LÃ­nea blanca que simula el subrayado -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnAddBalance"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"
                    android:contentDescription="@string/desc_add_balance"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/setupScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerBar"
            android:padding="16dp"
            android:clipToPadding="false">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#8B4513"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#F5DEB3">

                    <!-- Contenedor para ImageView y TextView -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/btnAtzera"
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:src="@drawable/atras"
                            android:contentDescription="Volver" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atzera"
                            android:textColor="#5B3A1C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#8B4513"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#F5DEB3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Partida konfigurazioa"
                            android:textColor="#5B3A1C"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Partda beste jokalarien aurka edo IAren aurka"
                            android:textColor="#8B6F47"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroupOnlineIa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="20dp"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOnline"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="Online"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textColor="@color/toggle_text_selector"
                                app:backgroundTint="#5B3A1C"
                                app:cornerRadius="18dp"
                                app:strokeColor="@color/toggle_stroke_selector"
                                app:strokeWidth="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIa"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="vs IA"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                app:backgroundTint="@color/toggle_bg_selector"
                                app:cornerRadius="18dp"
                                app:strokeColor="@color/black"
                                app:strokeWidth="1dp" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="#D2B48C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modalitatea aukeratu"
                            android:textColor="#5B3A1C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Partida mota aukeratu"
                            android:textColor="#8B6F47"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroupReyes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="20dp"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnFourKings"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:text="4 Errege"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textColor="@color/toggle_text_selector"
                                app:backgroundTint="#5B3A1C"
                                app:cornerRadius="18dp"
                                app:strokeColor="@color/toggle_stroke_selector"
                                app:strokeWidth="1dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnEightKings"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="8 Errege"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                app:backgroundTint="@color/toggle_bg_selector"
                                app:cornerRadius="18dp"
                                app:strokeColor="@color/black"
                                app:strokeWidth="1dp" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="#D2B48C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apostua ezarri"
                            android:textColor="#5B3A1C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Kantitatea aukeratu"
                            android:textColor="#8B6F47"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="200sp"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"/>
                        </LinearLayout>



                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlay"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:text="Jokatu"
                    android:textAllCaps="false"
                    android:textColor="#5B3A1C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:backgroundTint="#F5DEB3"
                    app:cornerRadius="28dp"
                    app:elevation="8dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:iconTint="#5B3A1C"
                    app:rippleColor="#FFFFFF"
                    app:strokeColor="#D2B48C"
                    app:strokeWidth="3dp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
