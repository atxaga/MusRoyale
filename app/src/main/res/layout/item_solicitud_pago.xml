<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtInfoSolicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erabiltzailea"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="PENDIENTE"
                android:textColor="#FFD700"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZENBATEKOA"
                    android:textColor="#888888"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtMontoAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00 USDT"
                    android:textColor="#00E676"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BINANCE ID"
                    android:textColor="#888888"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtOrderIdAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98237465"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#FF5252"
                android:text="EZEZTATU"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnAprobar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FFD700"
                android:text="ONARTU"
                android:textColor="#000000"
                android:textStyle="bold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>